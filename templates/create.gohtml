<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Tax Object</title>
    <style>
        html, body {
            padding: 0;
            border: 0;
            margin: 0;
        }

        body, form {
            display: flex;
            flex-flow: column nowrap;
            justify-content: center;
            align-items: center;
        }
        input {
            width: 60vw;
            font-size: 5rem;
            color: blue;
            border: 1px solid black;
        }
    </style>
</head>
<body>

<h1>Create New Cart</h1>
<form method="post" action="/cars/create/process">
    <input type="hidden" name="store_id" placeholder="store_id" value="1">
    <input type="text" name="product_name" placeholder="product_name" required>
    <select>
        {{range .}}
        <option value="{{.TaxCodeId}}">{{.Name}}</option>
        {{end}}
    </select>
    <input type="text" name="amount" placeholder="amount" required>
    <input type="submit">
</form>

</body>
</html>